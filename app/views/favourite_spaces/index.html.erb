<section class="container">
  <h1> Favourite Spaces</h1>
  <hr>
  <% if @user == current_user %>
      <h4> You have <%= pluralize(@user.favourite_spaces.count,'favourite space') %>. <% if @user.favourite_spaces.count == 0 %>Why not add <%= link_to 'some', spaces_url %>?<% end %></h4>
    <% else %>
      <h1> <%= @user.first_name %>'s Favourite Spaces </h1>
      <h3> <%=@user.first_name %> has <%= pluralize(@user.favourite_spaces.count,'favourite space') %> </h3>
  <% end %>

  <% if @user.favourite_spaces.any? %>
    <% @user.favourite_spaces.each do |space| %>
    <p><%=link_to space.title, space %> |
      <%= link_to 'Remove from favourites', favourite_space_path(space), method: :delete %><br/>
      <% end %></p>
    <% end %>
</section>
