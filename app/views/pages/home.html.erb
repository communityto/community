<section class="cover">
  <div class="welcome">
    Find a space<br />
    to express<br />
    yourself.
  </div>
</main>

<main class="site-content">

  <div class="explore-container">
    <h3>Explore</h3>

      <div id="tabs">
        <ul>
          <li><a href="#tabs-art">Art</a></li>
          <li><a href="#tabs-event">Event</a></li>
          <li><a href="#tabs-meeting">Meeting</a></li>
          <li><a href="#tabs-residential">Residential</a></li>
          <li><a href="#tabs-office">Office</a></li>
          <li><a href="#tabs-retail">Retail</a></li>
          <li><a href="#tabs-cafe">Caf√©</a></li>
        </ul>

        <div id="tabs-art">
          <%= render partial: 'explore', locals: {space: @space_art} %>
        </div>

        <div id="tabs-event">
          <%= render partial: 'explore', locals: {space: @space_event} %>
        </div>

        <div id="tabs-meeting">
          <%= render partial: 'explore', locals: {space: @space_meeting} %>
        </div>

        <div id="tabs-residential">
          <%= render partial: 'explore', locals: {space: @space_residential} %>
        </div>

        <div id="tabs-office">
          <%= render partial: 'explore', locals: {space: @space_office} %>
        </div>

        <div id="tabs-retail">
          <%= render partial: 'explore', locals: {space: @space_retail} %>
        </div>

        <div id="tabs-cafe">
          <%= render partial: 'explore', locals: {space: @space_cafe} %>
        </div>
      </div>

  </div>

  <h3>Featured Spaces</h3>
  <hr>

  <div class="container-fluid no-gutters">
    <div class="row no-gutters">
      <% @spaces.sample(6).each do |space| %>
        <div class="col-sm-6 col-md-4">
          <div class="space">
            <%= link_to space, class: 'space-link' do %>

            <div class="space-image" style="background-image: url('<%= space.avatar %>')"></div>

            <div class="space-description">
              <h1><%= space.title %></h1><% end %>
              <hr>
              <b><%= space.address.street_address %>, <%= space.address.city %></b><br />
              $<%= space.price %> | <%= space.capacity %> Persons | <%= space.size %> ft<sup>2</sup><br />
              <p><%= space.description %></p>
              Hosted by <%= link_to space.host.first_name, space.host %>
            </div>
          </div>
        </div>
      <% end %>

</main>

<!-- SCRIPTS -->

<script>
  $( function() {
    $( "#tabs" ).tabs();
  } );
</script>
