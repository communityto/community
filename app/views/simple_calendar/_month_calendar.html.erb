<div class="simple-calendar">
  <%= link_to "Previous", url_for(params.merge(start_date: date_range.first - 1.day).permit!), remote: true %>
  <%= I18n.t("date.month_names")[start_date.month] %> <%= start_date.year %>
  <%= link_to "Next", url_for(params.merge(start_date: date_range.last + 1.day).permit!), remote: true  %>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= I18n.t("date.abbr_day_names")[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                <% capture_haml do %>
                  <% block.call day, sorted_events.fetch(day, []) %>
                <% end %>
              <% else %>
                <% block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
  $(document).ready(function() {

    function timeISO(time) {
      t = new Date(time)
      return t.toISOString();
    }

    var disabledDates = <%= raw @hosted_space.disabled_dates %>;
    console.log(disabledDates);

    $('td > div').each(function(){
      var calendarDate = timeISO($(this).data('calendardate'));
      console.log(calendarDate);
      if (disabledDates.includes(calendarDate)) {
        $(this).attr('class', 'disabled-date');
      } else {
        $(this).attr('class', 'enabled-date');
      };
    });

    $('div.enabled-date').on('click', function() {
      $(this).attr('class', 'disabled-date');
      $.ajax({
        url: '<%= disable_date_url %>',
        type: 'POST',
        data: { disabled_date: timeISO($(this).data('calendardate')) }
      }).fail(function(data) {
        console.log("Failed");
      }).always(function () {
        console.log("Ajax request sent");
      });
    });

    $('div.disabled-date').on('click', function() {
      $(this).attr('class', 'enabled-date');
      $.ajax({
        url: '<%= enable_date_url %>',
        type: 'POST',
        data: { enabled_date: timeISO($(this).data('calendardate')) }
      }).fail(function(data) {
        console.log("Failed");
      }).always(function () {
        console.log("Ajax request sent");
      });
    });

  });
</script>
