<div id="new_review">

  <div id="reviews_summary">
    <h2>Reviews</h2>
    <p>
      Overall Average: <%= @space.reviews_avg %> </br></br>
      Accuracy Average: <%= @space.accuracy_avg %></br>
      Communication Average: <%= @space.communication_avg %></br>
      Facilities Average: <%= @space.facilities_avg %></br>
      Location Average: <%= @space.location_avg %></br>
    </p>
  </div>

  <hr>

<div id="review_all">

  <div id="reviews_list">
    <% @space.reviews.order(created_at: :desc).each do |review|  %>

      <div class="review_container" data-review-id = "<%= review.id %>">
        <div id="review_fade<%= review.id %>">
        <p>
          <%= review.content %></br>
          Accuracy: <%= review.accuracy %></br>
          Communication: <%= review.communication %></br>
          Facilities: <%= review.facilities %></br>
          Location: <%= review.location %></br>
        </p>

        <% if logged_in? && review.user_id == current_user.id %>
        <%= link_to 'Edit your review', edit_review_path(review), method: :update, :class=>'edit_review' %></br>
        <%= link_to 'Destroy', review_path(review), method: :delete, data: { :confirm => 'Are you sure?' }, :class=>'delete_review' %>
        <% end %>

        <% if review.user != nil  %>
          <p> By <%= review.user.first_name %></p>
          <p>Added on: <%= (review.created_at).strftime("%Y-%m-%d") %></p>

        <div class="helpful_div">
          <%= render "helpful" %>
        </div>
      </div>
      </br>
        <% end %>
      </div>

    <% end %>
  </div>
  </div>
</div>
