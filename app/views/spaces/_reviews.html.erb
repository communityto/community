<div class="new_review">

<h1>Reviews for this space: partial from Spaces</h1>

<div id="reviews_list">
<% @space.reviews.order(created_at: :desc).each do |review|  %>

<div id="review_message">
<p>
  <%# review.title %>
  <%= review.content %>
</p>
</div>

<% if review.user != nil  %>
  <p> by <%= review.user %>></p>
  <p>Added on: <%= review.created_at %></p>
<% end %>

<% end %>

</div>
</div>
