<main class="site-content">
  <h1>Listed Spaces</h1>

  <%= render partial: 'map', locals: {spaces: @spaces} %>

  <section class="flex-container">

    <% @spaces.each do |space| %>
      <div class="space flex-child">

        <%= link_to space, class: 'space-link' do %>

          <figure class="space-image">
            <% if space.avatar %>
              <%= image_tag space.avatar %>
            <% else %>
              <%= image_tag ("http://placehold.it/2000x1000") %>
            <% end %>
          </figure>

        <div class="space-description">
          <h1 class="space-title"><%= space.title %></h1><% end %>
            <hr>
          <p><%= space.description %></p>
          
        </div>

      </div>
    <% end %>
  </main>
</main>
