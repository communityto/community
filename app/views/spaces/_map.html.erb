<!DOCTYPE html>
<html>
  <head>
    <style>
      #map {
        width: 100%;
        height: 400px;
        background-color: grey;
      }
    </style>
  </head>
  <body>
    <h3>My Google Maps Demo</h3>
    <div id="map"></div>
    <script>

      function initMap() {
      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 12,
        center: {lat: 43.653226, lng: -79.383184}
      });
        <% @spaces.each do |s| %>
          var uluru = {
             lat: <%= s.address.latitude %>,
             lng: <%= s.address.longitude %>
           }

          var marker = new google.maps.Marker({
            position: uluru,
            map: map
          });

        <% end %>

      }

    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA1Yllu6iEk-2YKGm6lcwahtk9LPP2VFmI&callback=initMap">
    </script>
  </body>
</html>
