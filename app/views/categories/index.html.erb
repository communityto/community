<main class="site-content">
  <h1>Categories</h1>
  <hr>
  <div class="category">
    <div class="container-fluid">
      <div class="row">

        <% @categories.each do |category| %>
          <%= link_to category do %>
          <div class="col-md-4 category-name">
            <%= category.name %>
          </div>
        <% end %>
        <% end %>

      </div>
    </div>
  </div>
</main>
