<section class="container">

  <h1>Your Bookings</h1>
  <h3>You currently have <%= pluralize(@user.bookings.count,'booking') %></h3>

  <hr>

  <% if @user.bookings.any? %>
    <div><% @user_bookings.each do |booking|%>
    <p><%= link_to booking.space.title, booking.space%> | <%= link_to "Edit Booking", edit_user_booking_url(id: booking.id) %> <br/><br />
    Start: <%= booking.start_datetime %>, Check-in: <%= booking.space.check_in.strftime("%I:%M%p") %> <br />
    End: <%= booking.end_datetime %>, Check-out <%= booking.space.check_out.strftime("%I:%M%p") %> <br /></p>
    Status: <% if booking.approved == true %>
      Your booking has been approved.>
      <% else %>
      Your booking has not been approved.
      <% end %>

    <% end %></div>
  <% end %>

</section>
